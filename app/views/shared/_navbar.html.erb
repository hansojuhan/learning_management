<%# Header for desktop %>
<header class="hidden sm:flex w-full justify-center items-center text-gray-700 py-6">
  <div class="container mx-auto flex justify-between items-center">
    <div class="flex">
      <div>
        <%= link_to "Courses", root_path, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
      </div>
    </div>
    <%# Logo with a link %>
    <div>
      <%= link_to root_path do %>
        <% image_tag "logo.png", class:'h-12' %>
      <% end %>
    </div>
    <%# Links %>
    <div class="flex">
      <% if user_signed_in? %>
        <%= link_to "Sign Out", destroy_user_session_path, data: { 'turbo_method' => :delete, 'turbo_confirm' => "Are you sure?" }, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
        <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
      <% else %>
        <%= link_to "Sign In", new_user_session_path, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
      <% end %>
    </div>
  </div>
</header>
<%# Header for mobile %>
<%# STIMULUS: Data controller goes here %>
<header data-controller="navbar" class="bg-amaranth-500 sm:hidden w-full py-4 px-5 text-white-50">
  <div class="flex justify-between items-center">
    <div>
      <%= link_to root_path do %>
        <%= image_tag "logo.png", class:'h-12' %>
      <% end %>
    </div>
    <%# Add buttons for hamburger menu or close %>
    <div class="p-4">
      <%# STIMULUS: give access -> data controller # method %>
      <button data-action="click->navbar#toggle" id="bars" type="button" class="w-full flex justify-end items-center">
        <%= icon('fa-solid', 'bars') %>
      </button>
      <button data-action="click->navbar#toggle" id="close" type="button" class="hidden w-full flex justify-end items-center">
        <%= icon('fa-solid', 'x') %>
      </button>
    </div>
  </div>
  <%# Links %>
  <div id="mobile-links" class="hidden border-t-2 border-amaranth-400 flex flex-col w-full justify-center items-center">
    <div class="p-4">
      <%= link_to "Courses", root_path, class:'hover:bg-amaranth-700 rounded py-2 px-4' %>
    </div>
    <% if user_signed_in? %>
      <%= link_to "Sign Out", destroy_user_session_path, data: { 'turbo_method' => :delete, 'turbo_confirm' => "Are you sure?" }, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
      <%= link_to icon('fa-solid', 'user-circle'), edit_user_registration_path, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
    <% else %>
      <%= link_to "Sign In", new_user_session_path, class:'hover:bg-amaranth-500 hover:text-white-50 rounded py-2 px-4' %>
    <% end %>
  </div>
</header>