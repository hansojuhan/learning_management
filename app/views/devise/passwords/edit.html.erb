<div class="w-full flex flex-col justify-start items-center">
  <div class="flex md:w-1/2 justify-center py-10 items-center bg-white">

    <%# Form %>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class:'bg-white') do |f| %>

      <%# Error messages %>
      <%= render 'devise/shared/error_messages', resource: resource %>

      <%# Password reset token %>
      <%= f.hidden_field :reset_password_token %>

      <h1 class="text-gray-800 text-2xl font-bold mb-4">Change Password</h1>

      <div class="flex items-center border-2 rounded-2xl py-2 px-3 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
          <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
        </svg>
    
        <%= f.password_field :password, class:'outline-none border-none pl-2 border-transparent focus:border-transparent focus:ring-0', placeholder:'New Password', autocomplete:'password', autofocus: true %>
      </div>

      <div class="flex items-center border-2 rounded-2xl py-2 px-3 mb-4">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" viewBox="0 0 20 20"
                                                                              fill="currentColor">
          <path fill-rule="evenodd"
                d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                clip-rule="evenodd" />
        </svg>
    
        <%= f.password_field :password_confirmation, class:'outline-none border-none pl-2 border-transparent focus:border-transparent focus:ring-0', placeholder:'Confirm New Password', autocomplete:'password' %>
      </div>

      <%= f.submit "Submit", class:'block w-full bg-amaranth-600 hover:bg-amaranth-700 mt-4 py-2 rounded-2xl text-white-50 cursor-pointer font-semibold mb-2' %>

      <%# Devise shared links %>
      <div class="mt-6">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>