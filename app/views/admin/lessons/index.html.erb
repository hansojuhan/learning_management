<div class="w-full flex flex-col">
  <div class="mb-10">
    <p style="color: green"><%= notice %></p>
    <h1 class="mb-4 font-bold text-2xl">
      Lesson for course: <%= @admin_course.title %>
    </h1>
    <%= link_to "New lesson", new_admin_course_lesson_path(@admin_course), class:'bg-amaranth-500 hover:bg-amaranth-600 text-white-50 rounded px-4 py-2' %>
  </div>

  <%# For the stimulus js controller, add data-controller="lesson" %>
  <%# Adding also this data-lesson-course-value as the course id %>
  <%# data-sortable-animation-value="150" %>
  <div data-controller="lesson" data-sortable-animation-value="150" data-lesson-course-value="<%= @admin_course.id %>" id="admin_lessons" class="flex flex-col lg:flex-row flex-wrap justify-center lg:justify-start items-center w-full gap-5 pb-4">
    <% @admin_lessons.each do |admin_lesson| %>
      <div class="max-w-xs" id="<%= admin_lesson.id %>">      
        <%= link_to [:admin, @admin_course, admin_lesson] do %>
          <%= render admin_lesson %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>