<%# Dom_id helps with Hotwire stuff - leave it! %>
<div id="<%= dom_id course %>" class="max-w-sm rounded-b overflow-hidden shadow-lg hover:bg-voodoo-100">

  <%# Make the whole thing a link %>
  <%= link_to course, class:'flex flex-col h-full' do %>

    <% if course.image.present? %>
      <%= image_tag course.image, class:'w-full rounded-t' %>
    <% else %>
      <%# Nice placeholder service via.placeholder %>
      <%= image_tag("https://via.placeholder.com/300") %>
    <% end %>


    <div class="px-6 py-4 flex flex-col justify-between grow">
      <div>
        <div class="flex items-center justify-between font-bold text-xl mb-2">
          <%= course.title %>
          <% if user_unlocked_courses&.include? course.id %>
            <span class="ml-2 text-white-50 text-xs px-2 py-1 rounded bg-green-500">Unlocked</span>
          <% end %>
        </div> 
        <p class="text-sm font-extralight">Hans Johan</p>
        <div>
          <p class="text-md font-light">
            <%= course.paid ? "Premium Content" : "Free" %>
          </p>
        </div>
      </div>
    </div>

  <% end %>
</div>
