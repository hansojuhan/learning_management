<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%# Add the video %>
    <%= (@lesson.video.present?) ? (video_tag @lesson.video, autoplay:false, controls: true, class: "rounded") : "No video avaiable" %>

    <%# Container for lesson title and description %>
    <div class="border p-4 rounded my-2">
      <h1 class="text-2xl font-bold"><%= @lesson.title %></h1>
      <p class="text-gray-700"><%= @lesson.description %></p>
    </div>

    <%# Make a button to mark as complete %>
    <div class="my-6 lg:mb-0">
      <%# This is a put request, because we want to modify the lesson and mark it as completed. %>
      <%= link_to "Mark as complete", course_lesson_path(@course, @lesson), data: { 'turbo-method' => :put }, class:'bg-green-500 rounded hover:bg-green-600 text-white-50 px-4 py-2' %>
    </div>
  </div>

  <%# Sidebar %>
  <div>
      <%= render 'sidebar', course: @course %>
  </div>
</div>
